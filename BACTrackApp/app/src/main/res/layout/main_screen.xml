<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/small_background_img_size"
        android:layout_height="@dimen/small_background_img_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="25dp"
        android:alpha="0.14"
        app:srcCompat="@mipmap/smashicon_pint" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/small_background_img_size"
        android:layout_height="@dimen/small_background_img_size"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginBottom="31dp"
        android:alpha="0.14"
        app:srcCompat="@mipmap/smashicon_pint" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/small_background_img_size"
        android:layout_height="@dimen/small_background_img_size"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="42dp"
        android:alpha="0.14"
        app:srcCompat="@mipmap/smashicon_glass" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/small_background_img_size"
        android:layout_height="@dimen/small_background_img_size"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignTop="@+id/imageView3"
        android:alpha="0.14"
        app:srcCompat="@mipmap/smashicon_glass" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/small_background_img_size"
        android:layout_height="@dimen/small_background_img_size"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/imageView7"
        android:alpha="0.14"
        app:srcCompat="@mipmap/cheers" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/small_background_img_size"
        android:layout_height="@dimen/small_background_img_size"
        android:layout_alignStart="@+id/imageView4"
        android:layout_centerVertical="true"
        android:alpha="0.14"
        app:srcCompat="@mipmap/holiday" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Measure your BAC level when youâ€™re ready to go home."
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/device" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_white_border"
        android:onClick="checkBAC"
        android:text="Check BAC"
        android:textColor="@android:color/white" />
</RelativeLayout>