<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <ImageView
        android:id="@+id/image_holiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.4"
        android:paddingBottom="150dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        app:srcCompat="@mipmap/cheers" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Are you going to\ndrink tonight?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="45dp"
        android:layout_marginTop="94dp"
        android:background="@drawable/rounded_button_white_border"
        android:onClick="will_drink"
        android:text="Yes"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_car"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_white_border"
        android:onClick="maybe_will_drink"
        android:text="Maybe"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_walk"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/button_walk"
        android:background="@drawable/rounded_button_white_border"
        android:onClick="will_not_drink"
        android:text="No"
        android:textColor="@android:color/white" />

</RelativeLayout>